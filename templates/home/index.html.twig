{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block title %}A vos comptes{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
	<div class="container">
		<div class='row mb-3'>

			{# LOGO #}
			<div id="logo" class="offset-4 col-4 mt-2 center">
				<img src="https://placehold.co/500x250" class=" m-3" />
			</div>

			{# TITRE #}
			<h2 class="radius-short offset-4 col-4">A vos comptes</h2>

			{# SLOGAN #}
			<h3 class="offset-2 col-8 center taille30 gras">
				Gérez votre argent en toute simplicité.
				<br/>
				Pour une meilleur vision de votre budget !
			</h3>

			<section class='section'>
				<div class='row'>

					{# MESSAGE D'ACCUEIL #}
					<div class="offset-2 col-8 taille22 mt-2">
						<p>
							Bonjour et bienvenue sur cette application de gestion de comptes.
						</p>
					</div>

					{# ESPACE MEMBRE - FORM LOGIN #}
					<div class="offset-1 col-4 mt-3">
						{% include 'home/connexion/_index.html.twig' %}
					</div>

					{# TEST + INSCRIPTION #}
					<div class="offset-1 col-5 p-4">
						<div class='row'>

							{% if null == anonyme %}
								{# TESTER #}
								<div class='offset-2 col-8 d-flex justify-content-center mb-0'>
									<a href="{{ path('user_add_test')}}" class='p-1'>
										<nav>
											<ul>
												<li class="pointeur taille20">
													Tester l'application
													<span></span>
													<span></span>
													<span></span>
													<span></span>
												</li>
											</ul>
										</nav>
									</a>
								</div>

								<hr>

								{# S'INSCRIRE #}
								<div class='offset-1 col-10 d-flex justify-content-center'>
									<a href="{{ path('user_add')}}" class='p-1'>
										<nav>
											<ul>
												<li class="pointeur taille20">
													Créer un nouveau compte
													<span></span><span></span><span></span><span></span>
												</li>
											</ul>
										</nav>
									</a>
								</div>

							{# ANONYME #}
							{% else %}
								<div class='offset-2 col-8 d-flex justify-content-center mb-0'>
									<a href="{{ path('user_anonyme_connect', {'id': anonyme})}}" class='p-1'>
										<nav>
											<ul>
												<li class="pointeur taille20">
													Enregistrez-vous
													<span></span>
													<span></span>
													<span></span>
													<span></span>
												</li>
											</ul>
										</nav>
									</a>
								</div>
								<small>
									Pour reprendre la ou vous en étiez
									<br/>
									et sauvegarder sans risque votre travail,
									<br/>
									vous devez vous enregistrer.
								</small>
							{% endif %}
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
{% endblock %}