<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {# HEADER #}
        {% block header %}{% include '_header.html.twig' %}{% endblock %}

        {# MESSAGES FLASH SUCCESS #}
        {% for message in app.flashes('success') %}
            <div class="flash-notice mt-3 mb-3 bg-success text-center text-white">
                Succ√®s : {{ message|raw }}
            </div>
        {% endfor %}

        {# MESSAGES FLASH ERROR #}
        {% for message in app.flashes('error') %}
            <div class="flash-notice mt-3 mb-3 bg-danger text-center text-white">
                Erreur : {{ message|raw }}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

        {# FOOTER #}
        {% block footer %}{% include '_footer.html.twig' %}{% endblock %}

        {# TOASTER #}
        <div id="toaster" class="pointer" data-toaster="{{ message_toaster is defined ? message_toaster : 'Action inconnue !' }}"></div>
    </body>
</html>
