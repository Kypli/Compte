{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('compte') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('compte') }}
{% endblock %}

{% block body %}

	<div class="{# container #}">

		{# TITRE #}
		<div class='row mt-2 mb-3'>
			<div class="offset-4 col-4 center">
				<h1>{{ compte.libelle }}</h1>
			</div>
		</div>

		{# SOLDE ACTUEL #}
		<div class='row mt-2 mb-3'>
			<div class="offset-1 col-4">
				Solde actuel :
				<span class="total_month_full_{{ solde == null or solde < 0 ? 'neg' : 'pos' }}">
					{{ solde == null ? 0 : solde }}
				</span>
			</div>
		</div>

		{# TABLE #}
		<div class='row m-1 mt-2 mb-3'>
			<div class="mb-5 col-12">
				{% include('compte/table/_table.html.twig') with {'operations': operations_pos, 'type': 'pos' } %}
			</div>
			<div class="col-12">
				{% include('compte/table/_table.html.twig') with {'operations': operations_neg, 'type': 'neg' } %}
			</div>
			<div class="col-12">
				{{ include('compte/table/_table_soldes.html.twig') }}
			</div>
		</div>

		{# ACTIONS #}
		<div class='row mt-5 mb-3'>
			<div class="offset-1 col-10">
				<a href="{{ path('compte') }}">Retour Ã  la liste</a>

				<a href="{{ path('compte_edit', {'id': compte.id}) }}">Modifier</a>

				{{ include('compte/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
