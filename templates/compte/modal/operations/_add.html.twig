<tr class='modalOpeListeAdd'>
	<td>
		<input class='modalOpeInputNumber' type='number' step="0.01" pattern="^\d*(\.\d{0,2})?$" />
	</td>
	<td>
		<select class='modalOpeInputDay'>
			{% for i in 1..daysInMonth %}
				<option value='{{ i }}' {{ loop.first ? 'selected' }}>{{ i }}</option>
			{% endfor %}
		</select>
		/
		<span>{{ month < 10 ? '0' + month : month }}</span>
		/
		<span>{{ year }}</span>
	</td>
	<td>
		<input class='modalOpeInputComment' type='text' />
	</td>
	<td>
		<button class="modalOpeInputRetrait">Retirer</button>
	</td>
</tr>