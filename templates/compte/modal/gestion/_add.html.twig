<tr class='modalOpeListeAdd'>
	<td class='td_number'>
		<input
			class='modalOpeInputNumber'
			type='number'
			step="0.01"
			pattern="^\d*(\.\d{0,2})?$"
			value='0'
			{{ sign == 'pos' ? "min='0'" : "max='0'" }}
		/>
	</td>
	<td class='td_switch'>
		<span class='switch hide'><i class='fa-solid fa-repeat'></i></span>
	</td>
	<td class='td_anticipe'>
		<input
			class='modalOpeInputAnticipe'
			type='number'
			step='0.01'
			pattern='^\d*(\.\d{0,2})?$'
			value='0'
			{{ sign == 'pos' ? "min='0'" : "max='0'" }}
		/>
	</td>
	<td class='td_date'>
		<select class='modalOpeInputDay'>
			{% for i in 1..daysInMonth %}
				<option value='{{ i }}' {{ loop.first ? 'selected' }}>{{ i }}</option>
			{% endfor %}
		</select>/<span>{{ month < 10 ? '0' ~ month : month }}</span>/<span>{{ year }}</span>
	</td>
	<td class='td_comment'>
		<input class='modalOpeInputComment' type='text' />
	</td>
	<td>
		<button class="modalOpeInputRetrait">Retirer</button>
	</td>
</tr>