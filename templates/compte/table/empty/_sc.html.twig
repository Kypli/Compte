{% for month in 1..12 %}
	{% set done =
			current_year > year or (current_year == year and month < current_month)
				? 'done'
				: current_year == year and month == current_month
					? 'current'
					: ''
	%}


	{# REEL #}
	<td
		class='{{ done }}'
		data-month="{{ month }}"
		data-scid="{{ subcategory.id }}"
		data-sign="{{ sign }}"
		data-anticipe="0"
		data-target="#modalGestion"
		data-toggle="modal"
	>
		0
	</td>

	{# ANTICIPE #}
	<td
		class='{{ done }} anticipe'
		data-month="{{ month }}"
		data-scid="{{ subcategory.id }}"
		data-sign="{{ sign }}"
		data-anticipe="1"
		data-target="#modalGestion"
		data-toggle="modal"
	></td>
{% endfor %}
