{% if operationsArrayByScAndMonth[subcategory.id] is not defined %}
	{{ include('compte/_operation_empty.html.twig') }}
{% else %}

	{% set operationsByMonth = operationsArrayByScAndMonth[subcategory.id] %}

	{% for month in 1..12 %}

		{% set reel = 0 %}
		{% set anticipe = 0 %}

		{% if operationsByMonth[month] is defined %}
		
			{% for operation in operationsByMonth[month] %}

				{% if operation.anticipe %}
					{% set reel = reel + operation.number %}
				{% else %}
					{% set anticipe = anticipe + operation.number %}
				{% endif %}

			{% endfor %}
		{% endif %}

		<td>{{ reel }}</td>
		<td>{{ anticipe }}</td>

	{% endfor %}

	<td>{{ operationsByMonth[13] }}</td>
	<td>{{ (operationsByMonth[13] / 12)|round(2, 'ceil') }}</td>
	<td>{{ ((operationsByMonth[13]*100)/operationsArrayByScAndMonth['total'])|round(2, 'ceil') }}</td>

{% endif %}