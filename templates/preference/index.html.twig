{% extends 'base.html.twig' %}

{% block title %}UserPreference index{% endblock %}

{% block body %}
    <h1>UserPreference index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompteGenreShow</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_preference in user_preferences %}
            <tr>
                <td>{{ user_preference.id }}</td>
                <td>{{ user_preference.compteGenreShow ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_preference_show', {'id': user_preference.id}) }}">show</a>
                    <a href="{{ path('app_preference_edit', {'id': user_preference.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_preference_new') }}">Create new</a>
{% endblock %}
